<?xml version='1.0' encoding='utf-8'?>
<odoo>
    <data>
        <!-- Add you code here -->
        
        <report
            id="action_inventario_toma_fisica"
            model="stock.wizard.toma.fisica"
            string="Reporte de Toma Física de Inventario"
            report_type="qweb-pdf"
            name="supercauchos.inventario_toma_fisica"
            file="supercauchos.inventario_toma_fisica"
            menu="True"
            />

        <template id="external_layout_inventario_toma_fisica">

            <div class="header">
                <div class="container">
                    <div class="row">
                        <div class="col-4">
                            <div class="col-xs-3">
                                <img t-if="res_company.logo" t-att-src="'data:image/png;base64,%s' % to_text(res_company.logo)" style="max-height: 50px;"/>
                            </div>
                            <div class="col-xs-9 text-right" style="margin-top:22px;" name="moto"/>
                        </div>
                        <div t-if="res_company.logo or res_company.report_header" class="row zero_min_height">
                            <div class="col-xs-12">
                                <div style="border-bottom: 1px solid black;"/>
                            </div>
                        </div>
                        <div class="col-4 text-center"><br/>
                            <b style="font-size:20px;">Reporte de Productos</b><br/>
                            <small style="font-size:12px;">Deposito: </small>
                        </div>
                        <div class="col-4 text-right">
                            <b style="font-size:12px;">Pagina</b><br/>
                            <b style="font-size:12px;"><t t-esc="o.date_now.strftime('%d-%m-%Y %r')"/></b>
                        </div>
                    </div>
                </div>
            </div>

            <div class="article o_report_layout_standard">
                <t t-raw="0"/>
            </div>

            <div class="footer">
                <div class="text-center" style="border-top: 1px solid black;">
                    
                </div>
            </div>
        </template>

        <template id="inventario_toma_fisica">
            <t t-call="web.html_container">
                <t t-foreach="docs" t-as="o">
                    <t t-call="supercauchos.external_layout_inventario_toma_fisica">
                        
                        <div class="page">
                            <table class="border border-dark">
                                <colgroup>
                                    <col span="1" style="width: 10%;"/>
                                    <col span="1" style="width: 10%;"/>
                                    <col span="1" style="width: 10%;"/>
                                    <col span="1" style="width: 10%;"/>
                                    <col span="1" style="width: 10%;"/>
                                    <col span="1" style="width: 10%;"/>
                                    <col span="1" style="width: 10%;"/>
                                    <col span="1" style="width: 10%;"/>
                                    <col span="1" style="width: 10%;"/>
                                    <col span="1" style="width: 10%;"/>
                                </colgroup>
                                <tbody>
                                    <tr style="background-color: #cacaca">
                                        <td class="text-center border-dark border" style="display: table-cell; vertical-align: middle;">
                                            <b style="font-size:11px;">Código</b>
                                        </td>
                                        <td class="text-center border-dark border" style="display: table-cell; vertical-align: middle;">
                                            <b style="font-size:11px;">Descripción</b>
                                        </td>
                                        <td class="text-center border-dark border" style="display: table-cell; vertical-align: middle;">
                                            <b style="font-size:11px;">Modelo</b>
                                        </td>
                                        <td class="text-center border-dark border" style="display: table-cell; vertical-align: middle;">
                                            <b style="font-size:11px;">Marca</b>
                                        </td>
                                        <td class="text-center border-dark border" style="display: table-cell; vertical-align: middle;">
                                            <b style="font-size:11px;">Lonas</b>
                                        </td>
                                        <td class="text-center border-dark border" style="display: table-cell; vertical-align: middle;">
                                            <b style="font-size:11px;">Exist. Sistema</b>
                                        </td>
                                        <td class="text-center border-dark border" style="display: table-cell; vertical-align: middle;">
                                            <b style="font-size:11px;">Pedido Cliente</b>
                                        </td>
                                        <td class="text-center border-dark border" style="display: table-cell; vertical-align: middle;">
                                            <b style="font-size:11px;">No Despachado</b>
                                        </td>
                                        <td class="text-center border-dark border" style="display: table-cell; vertical-align: middle;">
                                            <b style="font-size:11px;">FillerT</b>
                                        </td>
                                        <td class="text-center border-dark border" style="display: table-cell; vertical-align: middle;">
                                            <b style="font-size:11px;">Conteo</b>
                                        </td>
                                    </tr>
                                    
                                    <t t-set="busqueda" t-value="o.env['product.product'].search([])"/>
                                    
                                    <t t-foreach="busqueda" t-as="item">
                                        <tr>
                                            <td style="display: table-cell; vertical-align: middle;" class="text-center border-dark border">
                                                <span style="font-size:10px;"><t t-esc="item.default_code"/></span>
                                            </td>
                                            <td style="display: table-cell; vertical-align: middle;" class="text-center border-dark border">
                                                <span style="font-size:10px;"><t t-esc="item.description_sale"/></span>
                                            </td>
                                            <td style="display: table-cell; vertical-align: middle;" class="text-center border-dark border">
                                                <span style="font-size:10px;"><t t-esc="item.model"/></span>
                                            </td>
                                            <td style="display: table-cell; vertical-align: middle;" class="text-center border-dark border">
                                                <span style="font-size:10px;"><t t-esc="item.brand_id.name"/></span>
                                            </td>
                                            <td style="display: table-cell; vertical-align: middle;" class="text-center border-dark border">
                                                <span style="font-size:10px;"><t t-esc="item.tarps"/></span>
                                            </td>
                                            <td style="display: table-cell; vertical-align: middle;" class="text-center border-dark border">
                                                <span style="font-size:10px;"><t t-esc="item.qty_available"/></span>
                                            </td>
                                            <td style="display: table-cell; vertical-align: middle;" class="text-center border-dark border">
                                                <span style="font-size:10px;"></span>
                                            </td>
                                            <td style="display: table-cell; vertical-align: middle;" class="text-center border-dark border">
                                                <span style="font-size:10px;"></span>
                                            </td>
                                            <td style="display: table-cell; vertical-align: middle;" class="text-center border-dark border">
                                                <span style="font-size:10px;"><t t-esc="round(item.filler * item.qty_available, 3)"/></span>
                                            </td>
                                            <td style="display: table-cell; vertical-align: middle;" class="text-center border-dark border">
                                                <span style="font-size:10px;"></span>
                                            </td>
                                        </tr>
                                    </t>

                                </tbody>
                            </table>

                        </div>
                    </t>
                </t>
            </t>
        </template>

    </data>
</odoo>