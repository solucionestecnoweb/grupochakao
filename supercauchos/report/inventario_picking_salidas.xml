<?xml version='1.0' encoding='utf-8'?>
<odoo>
    <data>
        <!-- Add you code here -->
        
        <report
            id="action_inventario_picking_salidas"
            model="stock.wizard.picking"
            string="Reporte de Ordenes de Entrega"
            report_type="qweb-pdf"
            name="supercauchos.inventario_picking_salidas"
            file="supercauchos.inventario_picking_salidas"
            menu="True"
            />

        <template id="external_layout_inventario_picking_salidas">

            <div class="header">
                <div class="container">
                    <div class="row">
                        <div class="col-5">
                            <b style="font-size:22px;"><span><t t-esc="res_company.name"/></span></b><br/>
                            <small style="font-size:12px;">RIF. <t t-esc="res_company.vat"/></small>
                        </div>
                        <div class="col-4 text-center"><br/>
                            <b style="font-size:18px;">Ventas no Despachadas</b><br/>
                            <small style="font-size:12px;">Desde: <t t-esc="o.date_from.strftime('%d-%m-%Y')"/> Hasta: <t t-esc="o.date_to.strftime('%d-%m-%Y')"/></small><br/>
                            <small style="font-size:12px;">Deposito: </small>
                        </div>
                        <div class="col-3 text-right">
                            <b style="font-size:12px;">Pagina</b><br/>
                            <b style="font-size:12px;"><t t-esc="o.date_now.strftime('%d-%m-%Y %r')"/></b>
                        </div>
                    </div>
                </div>
            </div>

            <div class="article o_report_layout_standard">
                <t t-raw="0"/>
            </div>

            <div class="footer">
                <div class="text-center" style="border-top: 1px solid black;">
                    
                </div>
            </div>
        </template>

        <template id="inventario_picking_salidas">
            <t t-call="web.html_container">
                <t t-foreach="docs" t-as="o">
                    <t t-call="supercauchos.external_layout_inventario_picking_salidas">
                        
                        <div class="page">
                            <br/><br/>
                            <table class="border border-dark">
                                <colgroup>
                                    <col span="1" style="width: 20%;"/>
                                    <col span="1" style="width: 20%;"/>
                                    <col span="1" style="width: 9%;"/>
                                    <col span="1" style="width: 9%;"/>
                                    <col span="1" style="width: 20%;"/>
                                    <col span="1" style="width: 8%;"/>
                                    <col span="1" style="width: 7%;"/>
                                    <col span="1" style="width: 7%;"/>
                                </colgroup>
                                <tbody>
                                    <tr>
                                        <td class="text-center border-dark border" style="display: table-cell; vertical-align: middle;">
                                            <b style="font-size:14px;">Cliente</b>
                                        </td>
                                        <td class="text-center border-dark border" style="display: table-cell; vertical-align: middle;">
                                            <b style="font-size:14px;">Vendedor</b>
                                        </td>
                                        <td class="text-center border-dark border" style="display: table-cell; vertical-align: middle;">
                                            <b style="font-size:14px;">Fecha Doc</b>
                                        </td>
                                        <td class="text-center border-dark border" style="display: table-cell; vertical-align: middle;">
                                            <b style="font-size:14px;">NÂ° Doc</b>
                                        </td>
                                        <td class="text-center border-dark border" style="display: table-cell; vertical-align: middle;">
                                            <b style="font-size:14px;">Producto</b>
                                        </td>
                                        <td class="text-center border-dark border" style="display: table-cell; vertical-align: middle;">
                                            <b style="font-size:14px;">Cant. Vend</b>
                                        </td>
                                        <td class="text-center border-dark border" style="display: table-cell; vertical-align: middle;">
                                            <b style="font-size:14px;">Filler</b>
                                        </td>
                                        <td class="text-center border-dark border" style="display: table-cell; vertical-align: middle;">
                                            <b style="font-size:14px;">FillerT</b>
                                        </td>
                                    </tr>
                                    
                                    <t t-set="busqueda" t-value="o.busqueda()"/>
                                    <t t-set="total_c" t-value="0"/>
                                    <t t-set="total_f" t-value="0"/>
                                    
                                    <t t-foreach="busqueda" t-as="item">
                                        <tr>
                                            <td style="display: table-cell; vertical-align: middle;" class="text-center border-dark border">
                                                <span style="font-size:12px;"><t t-esc="item.partner_id.name"/></span>
                                            </td>
                                            <td style="display: table-cell; vertical-align: middle;" class="text-center border-dark border">
                                                <span style="font-size:12px;"></span>
                                            </td>
                                            <td style="display: table-cell; vertical-align: middle;" class="text-center border-dark border">
                                                <span style="font-size:12px;"><t t-esc="item.scheduled_date.strftime('%d-%m-%Y %r')"/></span>
                                            </td>
                                            <td style="display: table-cell; vertical-align: middle;" class="text-center border-dark border">
                                                <span style="font-size:12px;"></span>
                                            </td>
                                            <td style="display: table-cell; vertical-align: middle;" class="text-center border-dark border">
                                                <span style="font-size:12px;"><t t-esc="item.move_line_ids_without_package.product_id.name"/></span>
                                            </td>
                                            <td style="display: table-cell; vertical-align: middle;" class="text-center border-dark border">
                                                <span style="font-size:12px;"><t t-esc="item.move_line_ids_without_package.product_uom_qty"/></span>
                                            </td>
                                            <td style="display: table-cell; vertical-align: middle;" class="text-center border-dark border">
                                                <span style="font-size:12px;"><t t-esc="round(item.move_line_ids_without_package.product_id.filler, 3)"/></span>
                                            </td>
                                            <td style="display: table-cell; vertical-align: middle;" class="text-center border-dark border">
                                                <span style="font-size:12px;"><t t-esc="round(item.move_line_ids_without_package.product_id.filler * item.move_line_ids_without_package.product_uom_qty, 3)"/></span>
                                            </td>
                                        </tr>
                                        <t t-set="total_c" t-value="total_c + item.move_line_ids_without_package.product_uom_qty"/>
                                        <t t-set="total_f" t-value="total_f + (item.move_line_ids_without_package.product_id.filler * item.move_line_ids_without_package.product_uom_qty)"/>
                                    </t>
                                        <tr>
                                            <td colspan="4" class="text-right border-dark border"></td>
                                            <td style="display: table-cell; vertical-align: middle;" class="text-center border-dark border"><b style="font-size:12px;">Sub Total Zona...</b></td>
                                            <td style="display: table-cell; vertical-align: middle;" class="text-center border-dark border"><span style="font-size:12px;"><t t-esc="round(total_c, 3)"/></span></td>
                                            <td class="text-right border-dark border"></td>
                                            <td style="display: table-cell; vertical-align: middle;" class="text-center border-dark border"><span style="font-size:12px;"><t t-esc="round(total_f, 3)"/></span></td>
                                        </tr>
                                </tbody>
                            </table>

                        </div>
                    </t>
                </t>
            </t>
        </template>

    </data>
</odoo>