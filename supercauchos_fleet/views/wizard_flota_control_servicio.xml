<?xml version="1.0" encoding="utf-8"?>
<odoo>
	<data>
    	<record id="fleet_wizard_control_servicio" model="ir.ui.view">
       	    <field name="name">Asistente de Reporte de Control de Servicios de Vehiculos</field>
            <field name="model">fleet.wizard.services</field>
    	    <field name="arch" type="xml">
    	    	<form string="Control de Servicios de Vehiculos">
                    <div>
                        <group >
                            <group >
                                <field name="date_from" string="Desde" required="1"/>
                            </group>
                            <group >
                                <field name="date_to" string="Hasta" required="1"/>
                            </group>
                        </group>

                    </div>
                    <footer> 
                        <button name="print_ordenes" string="Exportar PDF" type="object" class="oe_highlight" />
                        <button special="cancel" string="Cancel" class="oe_highlight" />
                    </footer>
                </form>
    	    </field>
    	</record>
        <record id="action_fleet_control_servicio" model="ir.actions.act_window">
        	<field name="name">Control de Servicios de Vehiculos</field>
        	<field name="res_model">fleet.wizard.services</field>
        	<field name="view_mode">form</field>
        	<field name="view_id" ref="fleet_wizard_control_servicio"/>
        	<field name="target">new</field>
    	</record>

		<menuitem name="Reporte Control de Servicios de Vehiculos" parent="fleet.menu_fleet_reporting" id="supercauchos_fleet.fleet_wizard_servicio" action="action_fleet_control_servicio"/>
	</data>
</odoo>