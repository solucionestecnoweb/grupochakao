<?xml version="1.0" encoding="utf-8"?>
<odoo>
	<data>
    	<record id="fleet_wizard_control_disponibilidad" model="ir.ui.view">
       	    <field name="name">Asistente de Reporte de Control de Disponibilidad de Vehiculos</field>
            <field name="model">fleet.wizard.available</field>
    	    <field name="arch" type="xml">
    	    	<form string="Control de Disponibilidad de Vehiculos">
                    <div>
                        <group >
                            <field name="date_from" string="Mes" required="1"/>
                        </group>
                    </div>
                    <footer> 
                        <button name="print_ordenes" string="Exportar PDF" type="object" class="oe_highlight" />
                        <button special="cancel" string="Cancel" class="oe_highlight" />
                    </footer>
                </form>
    	    </field>
    	</record>
        <record id="action_fleet_control_disponibilidad" model="ir.actions.act_window">
        	<field name="name">Control de Disponibilidad de Vehiculos</field>
        	<field name="res_model">fleet.wizard.available</field>
        	<field name="view_mode">form</field>
        	<field name="view_id" ref="fleet_wizard_control_disponibilidad"/>
        	<field name="target">new</field>
    	</record>

		<menuitem name="Reporte Control de Disponibilidad de Vehiculos" parent="fleet.menu_fleet_reporting" id="supercauchos_fleet.fleet_wizard_disponibilidad" action="action_fleet_control_disponibilidad"/>
	</data>
</odoo>